<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewBag.Title - Coffee Machine</title>
    
    <!-- Google Font (Optional) -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500&display=swap" rel="stylesheet" />
    
    <!-- Bootstrap CSS (CDN) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          integrity="sha384-ENjdO4Dr2bkBIFxQpeoXvaL6ilfdKgErwhN2BYV7c5CNEsnKAgXZsxFBr6rZEk8k"
          crossorigin="anonymous">

    <!-- Custom site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body style="font-family: 'Roboto', sans-serif;">

    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="navbar-brand">
            <a href="@Url.Action("Index", "CoffeeMachine")">
                <img src="@Url.Content("~/coffee-beans.png")" alt="Coffee Cup"/>
            </a>
        </div>

        <div class="navbar-links">
            <a class="menu-item" href="@Url.Action("Index", "CoffeeMachine")">Dashboard</a>
            <a class="menu-item" href="@Url.Action("Events", "CoffeeMachine")">Events</a>
        </div>
    </nav>



    
    <!-- Main Content Container -->
    <div class="container my-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
      <p>© 2025 Coffee Machine. All rights reserved.</p>
    </footer>


</body>
</html>
